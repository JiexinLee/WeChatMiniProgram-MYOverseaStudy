.filter {
  background-color: #fff;
}

.filter_right {
  float: right;
}

.container {
  margin-top: 10rpx;
}

.blank {
  width: 100%;
  height: 80rpx;
}

/* container */
.index_container_content_uni {
  background-color: #fff;
  width: 100%;
  height: 280rpx;
  margin-bottom: 15rpx;
}

.container_uniIcon {
  height: 280rpx;
  width: 40%;
  display: flex;
  justify-content: center;
  align-items: center;
  float: left;
}

.container_uniIcon image {
  width: 250rpx;
  height: 250rpx;
}

.container_uniDetail {
  height: 280rpx;
  width: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
  float: left;
  flex-direction: column;
}
.container_uniDetail_title {
  height: 25%;
  width: 100%;
  display: flex;
  justify-content: left;
  align-items: center;
  color: #20b4dc;
  font-size: 35rpx;
}

.container_uniDetail_block {
  width: 100%;
  display: flex;
  justify-content: left;
  align-items: center;
  text-align: center;
  color: #767676;
  font-size: 26rpx;
}

.container_uniDetail_block text {
  margin-right: 10rpx;
}

.container_uniRank {
  width: 30%;
  margin-left: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container_uniRank_content {
  font-size: 26rpx;
  width: 100rpx;
  height: 30rpx;
  border: 1px solid #348ab9;
  color: #348ab9;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.requirements {
  width: 100%;
  font-size: 26rpx;
  text-align: left;
  margin: 15rpx 0 15rpx 0;
}

.others {
  width: 100%;
  font-size: 20rpx;
}

.location, .acceptance {
  height: 20rpx;
  width: 33%;
  float: left;
  display: flex;
  justify-content: left;
  align-items: center;
}

.filter-buttons {
  width: 100%;
  height: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}