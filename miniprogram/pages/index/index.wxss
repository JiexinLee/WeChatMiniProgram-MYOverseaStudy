/* 固定横条 */
.fixed_message {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  z-index: 1010;
}

.wrapper {
  height: 70rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}

.wrapper button {
  width: 33.2%;
  background-color: #20b4dc;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}